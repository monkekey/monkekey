/* pages/shop/index.wxss */
/**index.wxss**/

.container {
  background-color: #F2f2f2;
  min-height: 100%;
}

.type-container{
  position:fixed;
  left:0;
  right:0;
  top:0;
  z-index:500;
  width: 100%;
  height: 90rpx;
  background: lightgray;
  display: flex;
  flex-direction: column;
}


.type-navbar{
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.type-box{
  width:160rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item{
  border-bottom: 4rpx solid #fff;
}
.type-item-on{
  border-bottom: 4rpx solid #e64340;
}

.goods-container{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 24rpx;
  margin-top: 90rpx;
  margin-bottom: 100rpx;
  background: #F2f2f2;
}
.goods-box{
  /* width: 339rpx;
  height: 472rpx; */
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
}
.goods-box .img-box{
  width: 339rpx;
  height: 339rpx;
  overflow: hidden;
}
.goods-box .img-box image{
   width: 339rpx;
   height: 339rpx;
}
.goods-box .goods-title{
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0 0rpx 0;
  color:#000;
  margin-left: 24rpx;
}
.goods-box .goods-price{
  flex: 1;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0;
  color:#e64340;
  margin-left: 24rpx;
}
.no-more-goods{
  text-align: center;
  font-size: 24rpx;
  padding-bottom:48rpx; 
  color: #999;
}

.pos-fiexd{
  position: fixed;
  top: 0;
  left: 0;
}

.goods-box .goods-opt{
  flex: 1;
  display:flex;
  align-items:center;
  padding-right: 24rpx;
}

.num-plus{
  width: 36rpx;
  height: 36rpx;
  background: #82599b;
  color: white;
  display: flex;
  align-items:center;
  justify-content:center;
}

.num-minus{
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #82599b; 
  background: white;
  color: #82599b;
  display: flex;
  align-items:center;
  justify-content:center;
}

.num {
  display:inline-block;
  width:32px;
  text-align:center;
  font-size:14px;
}

.flex {
  display:flex;
}

.flex-1 {
  flex: 1;
}

.flex-2 {
  flex: 2;
}

.flex-3 {
  flex: 3;
}

.x-center{
  justify-content:center;
}

.y-center{
  align-items:center;
}

.opt-bk {
  background:lightgreen;
}

/* shopcart 样式 */
.shoppingcard-container{
  position:fixed;
  left:0;
  right:0;
  bottom:0;
  z-index:500;
  width: 100%;
  height: 80rpx;
  background: lightgray;
  display: flex;
  flex-direction: row;
  color: white
}


.shopCart {
  position: fixed;
  left: 0px;
  bottom: 0px;
  z-index: 50;
  width: 100%;
  height: 96rpx;
}

.shopCart .content {
  display: flex;
  background: #141d27;
}

.shopCart .content .content-left {
  flex: 1;
}

.shopCart .content .content-left .logo-wrapper {
  display: inline-block;
  position: relative;
  top: -20rpx;
  margin: 0 24rpx;
  padding: 12rpx;
  width: 112rpx;
  height: 112rpx;
  box-sizing: border-box;
  vertical-align: top;
  border-radius: 50%;
  background: #141d27;
}

.shopCart .content .content-left .logo-wrapper .num {
  position: absolute;
  top: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 32rpx;
  font-size: 9px;
  font-weight: 700;
  color: #fff;
  background: rgb(240, 20, 20);
  box-shadow: 0 8rpx 16rpx 0 rgba(0, 0, 0, 0.4);
}

.shopCart .content .content-left .logo-wrapper .logo {
  width: 100%;
  height: 100%;
  text-align: center;
  border-radius: 50%;
  background: #2b343c;
}

.shopCart .content .content-left .logo-wrapper .logo.highlight {
  background: #82599b;
}

.shopCart .content .content-left .logo-wrapper .logo .icon-gouwuche {
  line-height: 88rpx;
  font-size: 24px;
  color: #80858a;
}

.shopCart .content .content-left .logo-wrapper .logo .icon-gouwuche.highlight {
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  height: 100%;
}

.shopCart .content .content-left .logo-wrapper .logo .icon-gouwuche.highlight image{
  width: 48rpx; 
  height: 48rpx;
}

.shopCart .content .content-left .price {
  display: inline-block;
  vertical-align: top;
  margin-top: 24rpx;
  line-height: 48rpx;
  padding-right: 24rpx;
  box-sizing: border-box;
  border-right: 1px solid rgba(255, 255, 255, 0.1);
  font-size: 16px;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.4);
}

.shopCart .content .content-left .price.highlight {
  color: #fff;
}

.shopCart .content .content-right {
  flex: 0 0 105px;
  width: 210rpx;
}

.shopCart .content .content-right .pay {
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
  font-weight: 700;
  background: #2b333b;
}

.shopCart .content .content-right .pay.not-enough {
  background: #2b333b;
}

.shopCart .content .content-right .pay.enough {
  background: #00b43c;
  color: #fff;
}

.shopCart .ball-container .ball {
  position: fixed;
  left: 64rpx;
  bottom: 64rpx;
  z-index: 200;
  transition: all 0.6s cubic-bezier(0.49, -0.29, 0.75, 0.41);
}

.shopCart .ball-container .ball .inner {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: rgb(0, 160, 220);
  transition: all 0.4s linear;
}

.shopCart .shopcart-list {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  transform:translate3d(0, -100%, 0);
  
}

.shopCart .shopcart-list :fade-enter-active, :fade-leave-active {
  transition: all 0.5s transform translate3d(0, -100%, 0);
}

.shopCart .shopcart-list :fade-enter, :fade-leave-active {
  transform: translate3d(0, 0, 0);
}

.shopCart .shopcart-list .list-header {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 36px;
  background: #f3f5f7;
  border-bottom: 2rpx solid rgba(7, 17, 27, 0.1);
}

.shopCart .shopcart-list .list-header .title {
  float: left;
  font-size: 14px;
  color: rgb(7, 17, 27);
}

.shopCart .shopcart-list .list-header .empty {
  float: right;
  font-size: 12px;
  color: rgb(0, 160, 220);
}

.shopCart .shopcart-list .list-content {
  padding: 0 36rpx 24rpx;
  max-height: 360rpx;
  overflow: hidden;
  background: #fff;
}

.shopCart .shopcart-list .list-content .shopcart-food {
  position: relative;
  padding: 8rpx 0;
  box-sizing: border-box;
  /*border-top: 1px solid rgba(7,17,27,0.1);*/
}

.shopCart .shopcart-list .list-content .shopcart-food .name {
  line-height: 48rpx;
  font-size: 14px;
  color: rgb(7, 17, 27);
}

.shopCart .shopcart-list .list-content .shopcart-food .price {
  /* position: absolute;
  right: 200rpx;
  bottom: 24rpx;
  line-height: 48rpx; */
  font-size: 14px;
  font-weight: 700;
  color: rgb(240, 20, 20);
  padding-left: 24rpx;
  padding-right: 24rpx;
}

