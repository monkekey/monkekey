<!--pages/IDCard/IDCard.wxml-->

  <view class='zan-panel display-flex justify-space' style='background-color:#fff;margin-top:0px;'>
    <view style='font-size:30rpx;font-weight:600;'>
      <view style='padding:20rpx 30rpx;color:#0B82E6'>西尔曼公寓(广州长隆北门华美国际店)</view>
      <view style='padding:0rpx 30rpx 10px;'>Hi，{{userInfo.nickName}}</view>
    </view>
    <view>
      <image class='userinfo_img' src='{{userInfo.avatarUrl}}'></image>
    </view>
  </view>
  <scroll-view scroll-y style="height: {{globalData.SystemInfo.windowHeight-74}}px;">
    <view style='width:90%;margin:0px 5%;' wx:if="{{guestInfo.viewPath}}">
      <view style='text-align:center;color:#fff;border-bottom:1px solid #fff;'>
        <view style='padding:40rpx 0;'>请点击下方区域进行本人识别</view>
      </view>
      <view wx:if="{{!guestInfo.facePath}}" bindtap='FacePhoto' style='background:#ddd;margin-top:40rpx;height:{{globalData.SystemInfo.windowHeight*0.4}}px;'>
        <image class='slide-image' src='../../images/icon-face.png'></image>
      </view>
      <view wx:if="{{guestInfo.facePath}}"  style='background:#ddd;margin-top:40rpx;height:{{globalData.SystemInfo.windowHeight*0.4}}px;'>
        <image src='{{guestInfo.facePath}}' class="slide-image"></image>
      </view>
    </view>

    <view style='width:90%;margin:0px 5%;'>
      <view style='text-align:center;color:#fff;border-bottom:1px solid #fff;'>
        <view style='padding:40rpx 0;'>请点击下方区域上传人像面身份证</view>
      </view>
      <view wx:if="{{!guestInfo.viewPath}}" bindtap='IDCardPhoto' style='background:#aaa;margin-top:40rpx;height:{{globalData.SystemInfo.windowHeight*0.4}}px;'>
        <image class='slide-image' src='../../images/icon-IDCard.png'></image>
      </view>
      <view wx:if="{{guestInfo.viewPath}}" style='background:#aaa;margin-top:40rpx;height:{{globalData.SystemInfo.windowHeight*0.4}}px;'>
        <image src='{{guestInfo.viewPath}}' class="slide-image"></image>
      </view>
    </view>
    <view style='height:10px;'></view>
  </scroll-view>
