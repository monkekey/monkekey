<!--pages/checkDetail/checkDetail.wxml-->
  <view class='bgcolor-blue' style='height:{{globalData.SystemInfo.windowHeight*0.3}}px;text-align:center;color:#fff;'>
    <view style='width:140rpx;height:80rpx;position:fixed;left:40rpx;top:40rpx;'>
      <image style='width:100%;height:100%;' src='{{globalData.imghotel}}skin/img/logo.png'></image>
    </view>
    <view>
      <image class='userinfo_img' src='{{userInfo.avatarUrl}}'></image>
    </view>
    <view class='font-size16' style='padding:20rpx 0;'>欢迎光临! 祝您在此度过一段美好时光!</view>
  </view>
  <view style='position:relative;top:-110rpx;height:auto;background:#fff;width:90%;left:5%;border-radius:10rpx;'>
     <view class="zan-panel text-color" style='border-radius:10rpx;'> 
      <view class="zan-cell">
        <view class="zan-cell__bd">{{roomInfo.roomNo}}</view>
        <!-- <view class="zan-cell__ft">开门密码：123456</view> -->
        <view bindtap='clickButton' class='zan-btn  zan-btn--mini' style='color:#fff;background:#0B82E6;border-radius:10rpx;'>发送门锁密码</view>
      </view>
      <view class="zan-cell">
        <view class="zan-cell__bd">{{roomInfo.roomTypeName}}</view>
        <view class="zan-cell__ft">￥{{orderInfo.amount}}</view>
      </view>
      <view class="zan-cell">
        <view class="zan-cell__bd">渠道</view>
        <view class="zan-cell__ft"><image class='icon_img'  src='../../images/bird.png'></image>自来客</view>
      </view>
      <view class="zan-cell">
        <view class="zan-cell__bd">入住时间</view>
        <view class="zan-cell__ft">{{estimateBeginTime+'至'+estimateEndTime}}<text style='margin:0 10rpx;'>|</text>{{cheakInDay}}晚</view>
      </view>
      <view class="zan-cell">
        <view class="zan-cell__bd">入住人</view>
        <view class="zan-cell__ft">{{guestlist.guestName}}<text style='margin:0 10rpx;'>|</text>{{guestlist.guestMobile}}</view>
      </view>
      <view class="display-flex font-size16" style='justify-content:center;padding:12px 15px;'>
        <view class='color-blue' bindtap='callKp'>呼叫管家</view>
        <text style='margin:0 40rpx;color:#bbb'>|</text>
        <view style='color:#bbb'>酒店周边</view>
      </view>
   </view> 
  </view>
  <view class='btn-v'>
    <button class='zan-btn bgcolor-blue btn-bot' style='margin:0 auto;' bindtap='onBill'>继续选房</button>
  </view>