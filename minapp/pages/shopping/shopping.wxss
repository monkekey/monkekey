/* pages/shopping/shopping.wxss */
page{
  background-color: #F4F4F4
}
.type-container{
  /* position:fixed; */
  left:0;
  right:0;
  /* top:0; */
  /* z-index:500; */
  width: 100%;
  height: 60rpx;
  background: lightgray;
  display: flex;
  flex-direction: column;
}
.type-navbar{
  white-space: nowrap;
  height: 58rpx;
  width: 100%;
  background-color: #fff;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.type-box{
  width:160rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 56rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item{
  border-bottom: 4rpx solid #fff;
}
.type-item-on{
  border-bottom: 4rpx solid #d81e06;
  color: #d81e06
}

.popup-example--bottom .zan-popup__container {
  left: 0;
  right: 0;
}
