<!--pages/cheakin/cheakin.wxml-->
  <view class='zan-panel display-flex justify-space' style='background-color:#fff;margin-top:0px;'>
    <view style='font-size:30rpx;font-weight:600;'>
      <view style='padding:20rpx 30rpx;color:#0B82E6'>西尔曼公寓(广州长隆北门华美国际店)</view>
      <view style='padding:0rpx 30rpx 10px;'>Hi，{{userInfo.nickName}}</view>
    </view>
    <view>
      <image class='userinfo_img' src='{{userInfo.avatarUrl}}'></image>
    </view>
  </view>
  <!--图片-->
  <view style='width:90%;margin:0px auto;'>
    <view style="position:relative;">
      <swiper indicator-dots="{{true}}" indicator-active-color="#ff9c01" circular="{{true}}" autoplay="{{true}}" interval="{{3000}}" duration="{{1000}}" class="swiper" style="height:{{globalData.SystemInfo.windowHeight*0.25}}px;margin-top:30rpx;" bindchange="onSwiperChange">
        <block wx:for="{{roomInfo.imgs}}" data-item="{{item}}" wx:if="{{roomInfo.imgs.length>0}}" wx:key="">
          <swiper-item>
            <image mode="aspectFill" src="{{item.viewPath}}" binderror="this.src='https://iyumi-web.img-cn-shenzhen.aliyuncs.com/mobile/temp.png'" class="slide-image" />
          </swiper-item>
        </block>
        <block wx:if="{{roomInfo.imgs.length<=0}}">
          <swiper-item>
            <image mode="aspectFill" src="{{globalData.imghotel+'hotel/364020375109633/room/hdc/main.png'}}" class="slide-image"></image>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <view class='bgcolor-blue' style='text-align:center;color:#fff;font-size:28rpx;'>
      <view style='padding:10rpx 0;font-size:32rpx;'>请确认入住人信息</view>
      <view style='padding-bottom:10rpx;'>{{roomInfo.roomNo}} {{roomInfo.roomTypeName}} {{beginTime+'~'+endTime}} 共{{cheakInDay}}晚</view>
    </view>
    <scroll-view enable-back-to-top="true" scroll-y style="height: {{globalData.SystemInfo.windowHeight*0.75-200}}px;background:#F9F9F9" bindscrolltoupper="upper" bindscrolltolower="lower" class="room-scroll-block">
        <view class="zan-panel"  wx:key="" wx:for="{{guestlist}}" data-item='{{item}}' data-index='{{index}}' >
          <view class="zan-card">
            <view class="zan-card__thumb userinfo_img" style='margin:0px;margin-top:5rpx;'>
              <image class="zan-card__img" src="{{userInfo.avatarUrl}}" mode="aspectFit"></image>
            </view>
            <view class="zan-card__detail text-color" style='margin-left:60px;'>
              <view class="zan-card__detail-row zan-c-gray-darker">
                <view class="zan-card__right-col  color-blue">
                  <view class="zan-icon zan-icon-arrow"></view>
                </view>
                <view class="zan-card__right-col color-blue" data-item='{{item}}' data-index='{{index}}' bindtap='onIDCard'>
                  <view>验证身份</view>
                  <view class='icon_img' style='float:right;margin-top:30rpx;'>
                    <image wx:if="{{item.proving}}" style='width:100%;height:100%' src='../../images/select-icon.png'></image>
                  </view>
                </view>
                <view class="zan-card__left-col">
                  <view style='padding:4rpx 10rpx'>{{item.guestName}}</view>
                  <view wx:if="{{!item.updM}}" style='padding:10rpx 10rpx'>
                    <text>{{item.guestMobile}}</text>
                    <image data-item='{{item}}' data-index='{{index}}' catchtap='updMobile' class='icon_img' src='../../images/comment.png'></image>
                  </view>
                  <input wx:if="{{item.updM}}" focus="{{item.updM}}" value='{{item.guestMobile}}' type='number' data-index='{{index}}' bindblur="chgMobile" style='border:1px solid #ddd;border-radius:10rpx;padding:0 10rpx;' placeholder='手机号'></input>
                </view>
              </view>
              <!-- <view class="zan-card__detail-row zan-c-gray-darker">
                <view class="zan-card__right-col  color-blue">
                   <view class='icon_img' style='margin-right:20rpx;margin-top:4rpx'>
                    <image wx:if="{{item.proving}}" style='width:100%;height:100%' src='../../images/select-icon.png'></image>
                  </view> 
                </view>
                 <view class="zan-card__left-col">
                  <input value='{{item.guestMobile}}' type='number' data-index='{{index}}' bindblur="chgMobile" style='border:1px solid #ddd;border-radius:10rpx;padding:0 10rpx;' placeholder='手机号'></input>
                </view> 
              </view> -->
            </view>
          </view>
        </view>
        <view style='height:50rpx;'></view>
    </scroll-view>
  </view>
  <view class='btn-v'>
    <button class='zan-btn bgcolor-blue btn-bot' style='margin:0 auto;' bindtap='onBill'>确认</button>
  </view>
  <view class="add-block" bindtap="addGuest">
    <image style="width:100rpx;height:100rpx;vertical-align:middle;box-shadow:0 0 10rpx #BBB;border-radius:78rpx;" src="{{globalData.imghotel}}yumiRoomSource/icons/icon-blue-add.png"></image>
  </view>